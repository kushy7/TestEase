<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestEaseUpdater.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <ActivityIndicator x:Name="loadingBar" IsRunning="True" WidthRequest="200" HeightRequest="200" />
        <Label x:Name="updatingLabel" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0" FontSize="20"/>
        <Label x:Name="argsLabel" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0" FontSize="20"/>
    </StackLayout>

</ContentPage>
